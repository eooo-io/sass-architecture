[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    venv,
    .env,
    .venv,
    docs/,
    node_modules/
per-file-ignores =
    __init__.py:F401
max-complexity = 10
count = true
show-source = true
statistics = true
docstring-convention = google
