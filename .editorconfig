# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_style = space
indent_size = 2
quote_type = single

# Python files
[*.{py,pyi}]
indent_style = space
indent_size = 4
max_line_length = 88  # Black formatter default
profile = black

# YAML files (Kubernetes, Docker, etc.)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Terraform files
[*.{tf,tfvars,hcl}]
indent_style = space
indent_size = 2
quote_type = double

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
switch_case_indent = true

# SQL files
[*.sql]
indent_style = space
indent_size = 2
quote_type = single

# HTML/CSS/SCSS files
[*.{html,css,scss,sass,less}]
indent_style = space
indent_size = 2

# JSON files
[*.{json,json5}]
indent_style = space
indent_size = 2

# Markdown files
[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Preserve trailing spaces for line breaks

# Documentation
[*.{rst,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# React Native/Mobile specific
[*.{swift,java,kt,gradle}]
indent_style = space
indent_size = 4

# GraphQL schemas
[*.{graphql,gql}]
indent_style = space
indent_size = 2

# Configuration files
[{package.json,.travis.yml,nginx.conf}]
indent_style = space
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Helm Charts
[*.{tpl,gotmpl}]
indent_style = space
indent_size = 2

# Proto files
[*.proto]
indent_style = space
indent_size = 2

# Environment files
[*.env*]
indent_style = space
indent_size = 2

# Keep defaults for third-party code
[{node_modules,vendor,dist,build}/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset 